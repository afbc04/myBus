{
    "openapi": "3.1.0",
    "info": {
        "title": "myBus API",
        "description": "API of myBus project",
        "version": "1.0",
        "contact": {
          "name": "afbc04",
          "url": "https://github.com/afbc04/myBus"
        }
    },
    "security": [
      {
        "TokenNeeded": []
      }
    ],
    "tags": [
      {
        "name": "Authentication v1.0",
        "description": "All about tokens, which are necessary to use the system"
      },
      {
        "name": "Country Codes v1.0",
        "description": "All about country codes"
      },
      {
        "name": "Bus Passes v1.0",
        "description": "All about bus passes"
      }
    ],
    "paths": {
        "/v1.0/token": {
            "post": {
                "tags": ["Authentication v1.0"],
                "summary": "New Token",
                "description": "Creates a token. Required to use the API",
                "operationId": "post_token_v1_0",
                "security": [],
                "requestBody": {
                  "required": true,
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/GettingToken"
                      }
                    }
                  }
                },
                "responses": {
                    "200": {
                        "description": "Token was requested",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/TokenResponse"
                                }
                            }
                        }
                    },
                    "403": { "description": "Password not correct" },
                    "404": { "description": "User not found" },
                    "417": { "description": "Request is invalid or does not provide the required information" },
                    "422": { "description": "Couldn't get a token" }
                }
            }
        },
        "/v1.0/countryCodes": {
            "get": {
                "tags": ["Country Codes v1.0"],
                "summary": "List Country Codes",
                "operationId": "list_country_codes_v1_0",
                "parameters": [
                  { "$ref": "#/components/parameters/pagePage" },
                  { "$ref": "#/components/parameters/pageLimit" },
                  {
                    "$ref": "#/components/parameters/pageSort",
                    "schema": {
                      "type" : "string",
                      "enum": ["id","name"]
                    }
                  }
                ],
                "responses": {
                    "200": {
                        "description": "Country Codes listed",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "type": "array",
                                  "items": {
                                    "$ref": "#/components/schemas/PageCountryCode"
                                  }
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" }
                }
            },
            "post": {
                "tags": ["Country Codes v1.0"],
                "summary": "Create Country Code",
                "operationId": "create_country_code_v1_0",
                "requestBody": {
                  "required": true,
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/CreatingCountryCode"
                      }
                    }
                  }
                },
                "responses": {
                    "201": {
                        "description": "Country Code Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/CountryCode"
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" },
                    "417": { "description": "Request is invalid or does not provide the required information" },
                    "422": { "description": "Couldn't create a country code" }
                }
            },
            "delete": {
                "tags": ["Country Codes v1.0"],
                "summary": "Clear All Country Codes",
                "operationId": "clear_country_code_v1_0",
                "responses": {
                    "200": {
                        "description": "Country Code Deleted",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "type": "array",
                                  "items": {
                                    "$ref": "#/components/schemas/CountryCode"
                                  }
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" }
                }
            }
        },
        "/v1.0/countryCodes/{id}": {
            "get": {
                "tags": ["Country Codes v1.0"],
                "summary": "Get Country Code",
                "operationId": "get_country_code_v1_0",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "title": "ID of Country Code"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Country Code Information",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/CountryCode"
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" },
                    "404": { "description": "Country Code does not exists"},
                    "417": { "description": "Request is invalid or does not provide the required information" },
                    "422": { "description": "Couldn't get country code" }
                }
            },
            "delete": {
                "tags": ["Country Codes v1.0"],
                "summary": "Delete Country Code",
                "operationId": "delete_country_code_v1_0",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "title": "ID of Country Code"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Country Code removed",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/CountryCode"
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" },
                    "404": { "description": "Country Code does not exists"},
                    "417": { "description": "Request is invalid or does not provide the required information" },
                    "422": { "description": "Couldn't delete country code" }
                }
            },
            "put": {
                "tags": ["Country Codes v1.0"],
                "summary": "Update Country Code",
                "operationId": "update_country_code_v1_0",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "title": "ID of Country Code"
                        }
                    }
                ],
                "requestBody": {
                  "required": true,
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/UpdatingCountryCode"
                      }
                    }
                  }
                },
                "responses": {
                    "200": {
                        "description": "Country Code updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/CountryCode"
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" },
                    "404": { "description": "Country Code does not exists"},
                    "417": { "description": "Request is invalid or does not provide the required information" },
                    "422": { "description": "Couldn't update country code" }
                }
            }
        },
        "/v1.0/busPasses": {
            "get": {
                "tags": ["Bus Passes v1.0"],
                "summary": "List Bus Passes",
                "operationId": "list_bus_passes_v1_0",
                "parameters": [
                  { "$ref": "#/components/parameters/pagePage" },
                  { "$ref": "#/components/parameters/pageLimit" },
                  {
                    "$ref": "#/components/parameters/pageSort",
                    "schema": {
                      "type" : "string",
                      "enum": ["id","discount","localityLevel","duration"]
                    }
                  },
                  {
                    "name": "localityLevel",
                    "in": "query",
                    "description": "List bus passes that includes this locality level",
                    "required": false,
                    "schema": {
                      "type": "integer"
                    },
                    "example" : "2"
                  }
                ],
                "responses": {
                    "200": {
                        "description": "Bus Passes listed",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "type": "array",
                                  "items": {
                                    "$ref": "#/components/schemas/PageBusPass"
                                  }
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" }
                }
            },
            "post": {
                "tags": ["Bus Passes v1.0"],
                "summary": "Create Bus Pass",
                "operationId": "create_bus_pass_v1_0",
                "requestBody": {
                  "required": true,
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/CreatingBusPass"
                      }
                    }
                  }
                },
                "responses": {
                    "201": {
                        "description": "Bus Pass Created",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/BusPass"
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" },
                    "417": { "description": "Request is invalid or does not provide the required information" },
                    "422": { "description": "Couldn't create the bus pass" }
                }
            },
            "delete": {
                "tags": ["Bus Passes v1.0"],
                "summary": "Clear All Bus Passes",
                "operationId": "clear_bus_passes_v1_0",
                "responses": {
                    "200": {
                        "description": "Bus Passes Deleted",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "type": "array",
                                  "items": {
                                    "$ref": "#/components/schemas/BusPass"
                                  }
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" }
                }
            }
        },
        "/v1.0/busPasses/{id}": {
            "get": {
                "tags": ["Bus Passes v1.0"],
                "summary": "Get Bus Pass Details",
                "operationId": "get_bus_pass_v1_0",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "title": "ID of Bus Pass"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bus Pass Details",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/BusPassDetails"
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" },
                    "404": { "description": "Bus Pass does not exists"},
                    "417": { "description": "Request is invalid or does not provide the required information" },
                    "422": { "description": "Couldn't get bus pass" }
                }
            },
            "delete": {
                "tags": ["Bus Passes v1.0"],
                "summary": "Delete Bus Pass",
                "operationId": "delete_bus_pass_v1_0",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "title": "ID of Bus Pass"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Bus Pass disabled",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/BusPass"
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" },
                    "404": { "description": "Bus Pass does not exists"},
                    "417": { "description": "Request is invalid or does not provide the required information" },
                    "422": { "description": "Couldn't disable bus pass" }
                }
            },
            "put": {
                "tags": ["Bus Passes v1.0"],
                "summary": "Update Bus Pass",
                "operationId": "update_bus_pass_v1_0",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "title": "ID of Bus Pass"
                        }
                    }
                ],
                "requestBody": {
                  "required": true,
                  "content": {
                    "application/json": {
                      "schema": {
                        "$ref": "#/components/schemas/UpdatingBusPass"
                      }
                    }
                  }
                },
                "responses": {
                    "200": {
                        "description": "Bus Pass updated",
                        "content": {
                            "application/json": {
                                "schema": {
                                  "$ref": "#/components/schemas/BusPass"
                                }
                            }
                        }
                    },
                    "401": { "description": "Missing or invalid token" },
                    "403": { "description": "Not enough permissions" },
                    "404": { "description": "Bus Pass does not exists"},
                    "417": { "description": "Request is invalid or does not provide the required information" },
                    "422": { "description": "Couldn't update bus pass" }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
          "TokenNeeded": {
            "type": "http",
            "scheme": "bearer",
            "bearerFormat": "JWT"
          }
        },
        "parameters": {
          "pagePage": {
            "name": "page",
            "in": "query",
            "description": "Page number (starting from 1)",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "default": 1
            },
            "example" : "3"
          },
          "pageLimit": {
            "name": "limit",
            "in": "query",
            "description": "Number of items per page",
            "required": false,
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 100,
              "default": 10
            },
            "example" : "15"
          },
          "pageSort": {
            "name": "sort",
            "in": "query",
            "description": "Comma-separated list of fields to sort by. FORMAT : {<name>:<(1 = ASC| -1 = DESC)>} ",
            "required": false,
            "schema": {
              "type": "string"
            },
            "example" : "{id:1,name:-1}"
          }
        },
        "schemas" : {
          "GettingToken" : {
            "type": "object",
            "required" : ["username","password","grantType"],
            "properties": {
              "username": {
                "type": "string",
                "description": "ID of user",
                "example": "your_username"
              },
              "password": {
                "type": "string",
                "description": "Password of user",
                "example": "your_password"
              },
              "grantType": {
                "type": "string",
                "description": "Grant Type of token",
                "example": "password"
              }
            }
          },
          "TokenResponse" : {
            "type": "object",
            "properties": {
              "accessToken": {
                "type": "string",
                "description": "Token ready to be used",
                "example": "HJVvhg34..."
              },
              "user" : {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "description": "ID of username related to the token",
                    "example": "your_username"
                  },
                  "level": {
                    "type": "string",
                    "description": "Level of user related to the token",
                    "example": "traveller"
                  }
                }
              },
              "expiresIn": {
                "type": "integer",
                "description": "Minutes until given token expires",
                "example": 60
              },
              "tokenType": {
                "type": "string",
                "description": "Type of Authentication",
                "example": "JWT"
              }
            }
          },
          "Page": {
            "type": "object",
            "properties": {
                "totalElements": { 
                    "type": "integer",
                    "description": "How many elements requested exists",
                    "example": 15 
                },
                "pageElements": { 
                    "type": "integer", 
                    "description": "How many elements are in this page",
                    "example": 10
                },
                "page": { 
                    "type": "integer", 
                    "description": "Number of page",
                    "example": 1 
                },
                "limit": { 
                    "type": "integer",
                    "description": "Maximum elements per page",
                    "example": 10 
                },
                "totalPages": { 
                    "type": "integer", 
                    "description": "How many pages exists",
                    "example": 2 
                },
                "empty": { 
                    "type": "boolean", 
                    "description": "Is this page empty?",
                    "example": false 
                },
                "all": { 
                    "type": "boolean", 
                    "description": "Are all elements in this page?",
                    "example": false 
                },
                "firstPage": { 
                    "type": "boolean", 
                    "description": "Is this page the first page?",
                    "example": true 
                },
                "lastPage": { 
                    "type": "boolean", 
                    "description": "Is this page the last page?",
                    "example": false 
                }
            }
          },
          "CountryCode" : {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "ID of Country",
                "example": "PRT"
              },
              "name": {
                "type": "string",
                "description": "Name of Country",
                "example": "Portugal"
              }
            }
          },
          "PageCountryCode": {
            "allOf": [
                { 
                    "$ref": "#/components/schemas/Page" 
                },
                {
                    "type": "object",
                    "properties": {
                        "data": {
                            "type": "array",
                            "items": { 
                                "$ref": "#/components/schemas/CountryCode" 
                            }
                        }
                    }
                }
            ]
          },
          "CreatingCountryCode" : {
            "type": "object",
            "required" : ["id","name"],
            "properties": {
              "id": {
                "type": "string",
                "description": "ID of Country",
                "example": "PRT"
              },
              "name": {
                "type": "string",
                "description": "Name of Country",
                "example": "Portugal"
              }
            }
          },
          "UpdatingCountryCode" : {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "Name of Country",
                "example": "Spain"
              }
            }
          },
          "BusPass" : {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "ID of Bus Pass",
                "example": "RGL"
              },
              "discount": {
                "type": "float",
                "description": "Discount of Bus Pass",
                "example": 50.0
              },
              "localityLevel": {
                "type": "integer",
                "description": "Locality Level the Bus Pass includes",
                "example": 2
              },
              "duration": {
                "type": "integer",
                "description": "Duration (days) of the Bus Pass",
                "example": 30
              },
              "active": {
                "type": "boolean",
                "description": "Is Bus Pass active?",
                "example": true
              }
            }
          },
          "BusPassDetails" : {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "ID of Bus Pass",
                "example": "RGL"
              },
              "discount": {
                "type": "float",
                "description": "Discount of Bus Pass",
                "example": 50.0
              },
              "localityLevel": {
                "type": "integer",
                "description": "Locality Level the Bus Pass includes",
                "example": 2
              },
              "duration": {
                "type": "integer",
                "description": "Duration (days) of the Bus Pass",
                "example": 30
              },
              "active": {
                "type": "boolean",
                "description": "Is Bus Pass active?",
                "example": true
              },
              "usersCount" : {
                "type": "object",
                "properties": {
                  "active": {
                    "type": "integer",
                    "description": "Number of users who actively uses this Bus Pass",
                    "example": 4
                  },
                  "expired": {
                    "type": "integer",
                    "description": "Number of users that have this Bus Pass but it's expired",
                    "example": 17
                  }
                }
              }
            }
          },
          "PageBusPass": {
            "allOf": [
                { 
                    "$ref": "#/components/schemas/Page" 
                },
                {
                    "type": "object",
                    "properties": {
                        "data": {
                            "type": "array",
                            "items": { 
                                "$ref": "#/components/schemas/BusPass" 
                            }
                        }
                    }
                }
            ]
          },
          "CreatingBusPass" : {
            "type": "object",
            "required" : ["id","discount","localityLevel","duration"],
            "properties": {
              "id": {
                "type": "string",
                "description": "ID of Bus Pass",
                "example": "RGL"
              },
              "discount": {
                "type": "float",
                "description": "Discount of Bus Pass",
                "example": 50.0
              },
              "localityLevel": {
                "type": "integer",
                "description": "Locality Level the Bus Pass includes",
                "example": 2
              },
              "duration": {
                "type": "integer",
                "description": "Duration (days) of the Bus Pass",
                "example": 30
              }
            }
          },
          "UpdatingBusPass" : {
            "type": "object",
            "properties": {
              "discount": {
                "type": "float",
                "description": "Discount of Bus Pass",
                "example": 50.0
              },
              "localityLevel": {
                "type": "integer",
                "description": "Locality Level the Bus Pass includes",
                "example": 2
              },
              "duration": {
                "type": "integer",
                "description": "Duration (days) of the Bus Pass",
                "example": 30
              },
              "active": {
                "type": "boolean",
                "description": "Is Bus Pass active?",
                "example": true
              }
            }
          }
        }
      },
    "servers": [
        {
            "url": "http://localhost:25000",
            "description": "API"
        }
    ]
}