<templates>

    <template id="create">
        <auth required="true"/>
        <body required="true">
            <i name="id" required="true"/>
            <i name="discount" required="true" datatype="float"/>
            <i name="localityLevel" required="true" datatype="integer"/>
            <i name="duration" required="true" datatype="integer"/>
        </body>
    </template>

    <template id="get">
        <auth />
    </template>

    <template id="list">
        <auth />
        <query page="true" sort="id,discount,localityLevel,duration">
            <q name="localityLevel" datatype="integer" />
        </query>
    </template>

    <template id="delete">
        <auth required="true"/>
    </template>

    <template id="update">
        <auth required="true"/>
        <body required="true">
            <i name="discount" datatype="float"/>
            <i name="localityLevel" datatype="integer"/>
            <i name="duration" datatype="integer"/>
            <i name="active" datatype="bool"/>
        </body>
    </template>

</templates>